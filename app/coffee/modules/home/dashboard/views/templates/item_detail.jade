mixin smallItem(label, text)
  small
    strong #{label}:
    | &nbsp;
    | #{text}
  br

//- // // // // //

.row

  .col-xs-12

    .row
      .col-xs-6
        p.lead.m-b-0= operation_name

        small= facility_address
        br
        small #{facility_city}, #{facility_municipality} #{facility_postal_zipcode}

      .col-xs-6
        if permitted_corp_name
          +smallItem('Corporation', permitted_corp_name)

        if perm_operator_first_name
          +smallItem('Operator', perm_operator_last_name + ', ' + perm_operator_first_name)

        if food_service_type
          +smallItem('Service', food_service_type)

        if food_service_description
          +smallItem('Type', food_service_description)


  .col-xs-12
    hr

  .col-xs-12(data-region='selector')

